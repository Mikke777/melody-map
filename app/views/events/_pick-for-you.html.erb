<div class="row">
  <div>
    <%= form_with url: events_path, method: :get do %>
    <%= submit_tag "Rock", name: "category", value: "Rock" %>
    <%= submit_tag "Festivals", name: "category", value: "Festivals" %>
    <%= submit_tag "Techno", name: "category", value: "Techno" %>
    <%= submit_tag "Hip-hop'", name: "category", value: "Hip-Hop" %>
    <%= submit_tag "Jazz", name: "category", value: "Jazz" %>
    <%= submit_tag "Classic", name: "category", value: "Classic" %>
    <%= submit_tag "Country", name: "category", value: "Country" %>
  <% end %>
  </div>
  <div style="margin: 3rem; border-top: 0.1rem solid #666; padding: 2rem; border-bottom: 0.1rem solid #666; width: 90%;">
    <%= link_to "ALL", events_path(view: "all"), style:"color: #666; margin-left: 1rem; text-decoration:none;"  %>
    <%= link_to "FOR YOU", events_path(view: "for_you"), style:"color: #666; margin-left: 1rem; text-decoration:none;" %>
    <%= link_to "TODAY", events_path(view: "today"), style:"color: #666; margin-left: 1rem; text-decoration:none;"  %>
    <%= link_to "THIS WEEK", events_path(view: "week"), style:"color: #666; margin-left: 1rem; text-decoration:none;"  %>
  </div>
  <div class="d-flex">
    <% if params[:view] == "all" %>
        <h2><i class="fa-solid fa-music" style="margin-top: 4rem;margin-bottom: 4rem;font-size: 1.5rem;color:black;"></i>All Events!</h2>
        <%= link_to 'VIEW ALL', events_path(view: 'all'), style:"text-decoration: none; background-color: white;padding: 0.2rem; color: black; border: 2px solid black; border-radius: 20px;" %>
      <% elsif params[:view] == "for_you" %>
        <h2><i class="fa-solid fa-music" style="margin-top: 4rem;margin-bottom: 4rem;font-size: 1.5rem;color:black;"></i>Our Picks For You!</h2>
        <%= link_to 'See All Events', events_path, style:"text-decoration: none; background-color: white;padding: 0.2rem; color: black; border: 2px solid black; border-radius: 20px;" %>
      <% elsif params[:view] == "today" %>
        <h2><i class="fa-solid fa-music" style="margin-top: 4rem;margin-bottom: 4rem;font-size: 1.5rem;color:black;"></i>Events Today!</h2>
        <%= link_to 'See All Events', events_path, style:"text-decoration: none; background-color: white;padding: 0.2rem; color: black; border: 2px solid black; border-radius: 20px;" %>
      <% elsif params[:view] == "week" %>
        <h2><i class="fa-solid fa-music" style="margin-top: 4rem;margin-bottom: 4rem;font-size: 1.5rem;color:black;"></i>Events This Week!</h2>
        <%= link_to 'See All Events', events_path, style:"text-decoration: none; background-color: white;padding: 0.2rem; color: black; border: 2px solid black; border-radius: 20px;" %>
    <% end %>
  </div>

  <% @events.each do |event| %>
    <div class="col-4 mb-4">
      <div>
        <div class="d-block mb-4">
          <%#= image_tag event.image_url, alt: event.name, class: "card-img-top" %>
          <%= image_tag "Logo.svg", alt: event.name, style: "width:80%" %>
        </div>
        <div>
          <p style="margin-left: 0.5rem; margin-bottom: 0; display: inline-block; padding: 0.2rem; color: pink; border: 2px solid pink; border-radius: 20px;"><%= event.category %></p>
          <a href="<%= event_path(event) %>" style="text-decoration: none; display: block; color: black; font-size: 1.5rem; font-weight:bold;"><%= event.name %></a>
          <p style="margin: 0; color: #666;"><%= event.location %></p>
          <p style="margin: 0; color: #666;"><%= event.date %></p>
          <p style="color: #666;">
            <i class="fa-regular fa-bookmark" style="font-size: 1rem; color: #666;"></i>
            <strong><%= event.favorited.count %></strong>
            <%= event.favorited.count == 1 ? 'Bookmark' : 'Bookmarks' %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
