
<%# <%= @event.name %>
<%# <%= @event.description %>
<%# <%= @event.date %>

<link href="https://api.mapbox.com/mapbox-gl-js/v2.9.0/mapbox-gl.css" rel="stylesheet">
<%= stylesheet_link_tag 'application', media: 'all' %>
<%= javascript_include_tag 'application' %>

<% if @event %>
  <h1><%= @event.name %></h1>
  <p><%= @event.description %></p>
  <p>Date: <%= @event.date.strftime("%B %d, %Y") %></p>

  <div class="container mt-4">
    <div class="row">
      <!-- Event Image Card -->
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="https://entoria-metal.de/wp-content/themes/yootheme/cache/21/albtraumnacht-vol6-muenchen-21b4703b.jpeg" class="card-img-top" alt="<%= @event.name %>">
        </div>
      </div>

      <!-- Event Information Card -->
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= @event.name %></h5>
            <p class="card-text"><%= @event.description %></p>
            <p class="card-text">Date: <%= @event.date.strftime("%B %d, %Y") %></p>
            <% if current_user %>
              <%= button_to 'Bookmark', bookmark_event_path(@event), method: :post, class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Placeholder Card for Creator Information -->
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Creator Information</h5>
            <p class="card-text">Details about the creator will be available soon.</p>
            <p class="card-text">This section is under construction.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Map Section -->
    <div class="col-4" style="width: 100%; height: 100vh; position: sticky; top: 0;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>

  <% else %>
    <p>Event not found.</p>
<% end %>
