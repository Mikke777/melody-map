<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Create New Event</h2>

      <%= form_with(model: @event, local: true) do |form| %>

        <div class="mb-3">
          <%= form.label :title, "Event Title", class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter event title", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "Organizer Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", placeholder: "your.email@example.com", required: true %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= form.label :start_time, "Start Date & Time", class: "form-label" %>
            <%= form.datetime_local_field :start_time, class: "form-control", required: true %>
          </div>
          <div class="col-md-6 mb-3">
            <%= form.label :end_time, "End Date & Time", class: "form-label" %>
            <%= form.datetime_local_field :end_time, class: "form-control", required: true %>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :location, "Location", class: "form-label" %>
          <%= form.text_field :location, class: "form-control", placeholder: "Enter event location", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :duration, "Duration", class: "form-label" %>
          <%= form.text_field :duration, class: "form-control", placeholder: "e.g., 2 hours", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Description", class: "form-label" %>
          <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter event description", required: true %>
        </div>

        <div class="form-check mb-4">
          <%= form.check_box :send_confirmation, { class: "form-check-input" } %>
          <%= form.label :send_confirmation, "Send confirmation email", class: "form-check-label" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to 'Cancel', events_path, class: "btn btn-secondary" %>
          <%= form.submit "Create Event", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
