<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Create New Event</h2>

      <% if @event.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @event, local: true) do |form| %>

        <div class="mb-3">
          <%= form.label :name, "Event name", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter event name", required: true %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= form.label :date, "Date", class: "form-label" %>
            <%= form.datetime_local_field :date, class: "form-control", required: true %>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :location, "Location", class: "form-label" %>
          <%= form.text_field :location, class: "form-control", placeholder: "Enter event location", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :category, "Category", class: "form-label" %>
          <%= form.select :category, options_for_select([["Pop", "Pop"], ["Rock", "Rock"], ["Hip-Hop", "Hip-Hop"], ["Electronic", "Electronic"], ["Country", "Country"], ["Classic", "Classic"]]), { prompt: "Select a Category" }, class: "form-select", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :photo, "Photo", class: "form-label" %>
          <%= form.file_field :photo, as: :file %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Description", class: "form-label" %>
          <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter event description", required: true %>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to 'Cancel', events_path, class: "btn btn-secondary" %>
          <%= form.submit "Create Event", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
