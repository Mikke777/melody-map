<div class="content">
  <%# Star-sign %>
  <div class="starsign"><%= image_tag "star.svg" %></div>
  <%# Main Banner  %>
  <div class="banner-main-title">
    <h1>Wherever Music Takes You, Find It Here</h1>
  </div>
<%# Subbanner text  %>
  <div class="banner-subtext">This is the place, where you will find your next event. The Music you love.The event you ever wanted to go. The place to follow the right people. <p> Welcome to Melody Map. Follow your rhythm.</p></div>


  <div class="col">
    <%= form_with url: events_path, method: :get, local: true do %>
      <div class="form-group">
        <%= label_tag :query, "" %>
        <%= text_field_tag :query, params[:query], class: "form-control" %>
      </div>
        <% end %>
  </div>
  <div class="col-auto">
    <button class="btn btn-lg banner-btn-success" type="submit" style="margin-right: 10px; margin-top: 15px;">Search</button>
  </div>
</div>
